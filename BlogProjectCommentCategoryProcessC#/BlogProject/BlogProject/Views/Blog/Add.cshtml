@model List<Category>
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <div class="row">

        <div class="col-12">
            <div class="card p-3">
                <h3>Add Blog</h3>
                <hr />
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-3">
                            <label for="Name">Blog Name</label>
                        </div>
                        <div class="col-9">
                            <input type="text" placeholder="Blog Name" name="Name" id="Name" class="form-control" />
                        </div>
                    </div> 
                    <div class="row mb-3">
                        <div class="col-3">
                            <label for="ShortDescription">Short Description</label>
                        </div>
                        <div class="col-9">
                            <input type="text" placeholder="Short Description" name="ShortDescription" id="ShortDescription" class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label for="Description">Description</label>
                        </div>
                        <div class="col-9">
                            <textarea class="form-control" rows="5" name="Description" id="Description"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label for="categoryId">Select Category</label>
                        </div>
                        <div class="col-9">
                            <select name="categoryIds" id="categoryId" class="form-control" multiple>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-lg-3">
                            <label for="IsStatus">Status</label>
                        </div>
                        <div class="col-9">
                            <input type="checkbox" name="IsStatus" id="IsStatus" data-val="true" value="true" class="form-check" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-9">
                            <input type="submit" value="Add Blog" class="btn btn-success" />
                        </div>
                    </div>
                    <label style="color:orange">@TempData["Message"]</label>
                </form>
            </div>
        </div>


    </div>
</div>